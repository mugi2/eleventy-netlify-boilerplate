<section>
	{% for episode in episodeslist | reverse %}
		<article{% if episode.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ episode.url | url }}">
					{% if episode.data.title %}
						{{ episode.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if episode.data.summary %}
				<p>
					{{ episode.data.summary }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ episode.date | machineDate }}">
					<small>{{ episode.date | readableDate }}</small>
				</time>
			</p>
		</article>
	{% endfor %}
</section>
